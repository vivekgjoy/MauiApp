<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp.Views.ReportsHistoryPage"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False"
             Background="Transparent">

    <Grid>

        <!-- Background Gradient -->
        <BoxView>
            <BoxView.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="{StaticResource TopCoral}" Offset="0.0" />
                    <GradientStop Color="{StaticResource BottomCoral}" Offset="1.0" />
                </LinearGradientBrush>
            </BoxView.Background>
        </BoxView>

        <!-- Header -->
        <Grid HeightRequest="120"
              VerticalOptions="Start"
              HorizontalOptions="FillAndExpand">

            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="56"/>
                <RowDefinition Height="24"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="1" Padding="10,0,15,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Back Button -->
                <Image Grid.Column="0"
                       Source="ic_arrow_back.svg"
                       WidthRequest="22"
                       HeightRequest="22"
                       VerticalOptions="Center"
                       HorizontalOptions="Start">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnBackButtonClicked" />
                    </Image.GestureRecognizers>
                </Image>

                <Label Grid.Column="1"
                       Text="Reports History"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"
                       VerticalOptions="Center" />
            </Grid>
        </Grid>

        <!-- Reports List -->
        <ScrollView Margin="0,110,0,0"
                    Padding="15,10,15,80">
            <CollectionView x:Name="ReportsCollectionView"
                            ItemsSource="{Binding Reports}"
                            BackgroundColor="Transparent"
                            SelectionMode="None">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical"
                                       ItemSpacing="10" />
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <!-- Modern Card with soft beige color and integrated corner button -->
                        <Border StrokeThickness="0"
                                BackgroundColor="#FFF9E6"
                                StrokeShape="RoundRectangle 18,18,18,18"
                                Margin="0,5">

                            <Border.Shadow>
                                <Shadow Radius="5"
                                        Offset="2,2"
                                        Opacity="0.15"
                                        Brush="Black" />
                            </Border.Shadow>

                            <Grid ColumnDefinitions="Auto,*"
                                  RowDefinitions="Auto,Auto,Auto"
                                  ColumnSpacing="10"
                                  Padding="12">

                                <!-- PDF Icon -->
                                <Image Grid.RowSpan="3"
                                       Grid.Column="0"
                                       Source="ic_pdf_icon.png"
                                       WidthRequest="26"
                                       HeightRequest="26"
                                       VerticalOptions="Center"
                                       HorizontalOptions="Start" />

                                <!-- Report Info -->
                                <Label Grid.Column="1"
                                       Grid.Row="0"
                                       Text="{Binding FileName}"
                                       FontSize="15"
                                       FontAttributes="Bold"
                                       TextColor="Black"
                                       LineBreakMode="TailTruncation" />

                                <Label Grid.Column="1"
                                       Grid.Row="1"
                                       Text="{Binding CreatedDate, StringFormat='Generated: {0:MMM dd, yyyy • HH:mm}'}"
                                       FontSize="13"
                                       TextColor="#666" />

                                <Label Grid.Column="1"
                                       Grid.Row="2"
                                       Text="{Binding ImageCount, StringFormat='{0} images'}"
                                       FontSize="12"
                                       TextColor="#999" />

                                <!-- SHARE BUTTON - Integrated with card corner -->
                                <Border Grid.Row="2"
                                        Grid.Column="1"
                                        BackgroundColor="#FF6B5A"
                                        StrokeThickness="0"
                                        StrokeShape="RoundRectangle 0,10,18,18"
                                        Padding="8"
                                        HorizontalOptions="End"
                                        VerticalOptions="End"
                                        Margin="0,-12,-12,-12">

                                    <Border.Shadow>
                                        <Shadow Radius="3" Offset="1,1" Opacity="0.25" Brush="Black" />
                                    </Border.Shadow>

                                    <Label Text="↗"
                                           FontSize="22"
                                           FontAttributes="Bold"
                                           TextColor="White"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center" />
                                    
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer
                                            CommandParameter="{Binding FilePath}"
                                            Tapped="OnShareReportClicked" />
                                    </Border.GestureRecognizers>
                                </Border>

                                <!-- Ripple Effect -->
                                <BoxView Grid.ColumnSpan="2"
                                         Grid.RowSpan="3"
                                         BackgroundColor="#FFFFE5D9"
                                         Opacity="0"
                                         InputTransparent="True" />

                                <!-- Tap Gesture for Card -->
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer
                                        CommandParameter="{Binding FilePath}"
                                        Tapped="OnReportCardTapped" />
                                </Grid.GestureRecognizers>

                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>

        <!-- Empty State -->
        <Frame x:Name="EmptyStateFrame"
               BackgroundColor="White"
               CornerRadius="12"
               Padding="30"
               HasShadow="True"
               IsVisible="False"
               VerticalOptions="Center"
               HorizontalOptions="Center"
               Margin="30">
            <StackLayout Spacing="15"
                         HorizontalOptions="Center">
                <Image Source="ic_pdf_icon.png"
                       WidthRequest="60"
                       HeightRequest="60"
                       HorizontalOptions="Center" />
                <Label Text="No Reports Generated"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="Black"
                       HorizontalOptions="Center" />
                <Label Text="Generate your first PDF report to see it here"
                       FontSize="14"
                       TextColor="#666"
                       HorizontalOptions="Center" />
            </StackLayout>
        </Frame>


        <!-- Bottom Button -->
        <Frame VerticalOptions="End"
               BackgroundColor="Transparent"
               Padding="20,15"
               HasShadow="False">
            <Button Text="Generate New Report"
                    FontSize="16"
                    FontAttributes="Bold"
                    BackgroundColor="{StaticResource TopCoral}"
                    TextColor="White"
                    HeightRequest="50"
                    CornerRadius="25"
                    Clicked="OnGenerateNewReportClicked" />
        </Frame>

    </Grid>
</ContentPage>