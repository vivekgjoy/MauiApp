<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp.Views.AddReportPage"
             Title="Add New Report"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{StaticResource PrimaryRed}">

    <Grid>
        <!-- Custom Navigation Header -->
        <Grid x:Name="CustomNavHeader" 
      BackgroundColor="{StaticResource PrimaryRed}"
      HeightRequest="120"
      VerticalOptions="Start"
      HorizontalOptions="FillAndExpand">
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <!-- Status bar space -->
                <RowDefinition Height="56" />
                <!-- Navigation bar -->
                <RowDefinition Height="24" />
                <!-- Extra spacing -->
            </Grid.RowDefinitions>

            <!-- Navigation Bar Content -->
            <Grid Grid.Row="1" 
          BackgroundColor="{StaticResource PrimaryRed}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <!-- Back button -->
                    <ColumnDefinition Width="*" />
                    <!-- Title -->
                    <ColumnDefinition Width="Auto" />
                    <!-- Spacer -->
                </Grid.ColumnDefinitions>

                <!-- Back Button -->
                <Button Grid.Column="0"
                Text="â†"
                FontSize="24"
                TextColor="{StaticResource White}"
                BackgroundColor="Transparent"
                BorderWidth="0"
                Padding="10,0"
                HorizontalOptions="Start"
                VerticalOptions="Center"
                Clicked="OnBackClicked" />

                <!-- Title (center aligned across full nav bar) -->
                <Label Grid.Column="1"
               Text="Add New Report"
               FontSize="18"
               FontAttributes="Bold"
               TextColor="{StaticResource White}"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               HorizontalTextAlignment="Center" />

                <!-- Spacer -->
                <Label Grid.Column="2" Text="" />
            </Grid>
        </Grid>


        <!-- Main Content -->
        <ScrollView BackgroundColor="{StaticResource Black}"
                    Margin="0,120,0,0">
            <StackLayout Spacing="0" Padding="0">

                <!-- Report Form Card - Close to header -->
                <Frame BackgroundColor="{StaticResource Gray800}"
                       CornerRadius="12"
                       Margin="16,16,16,0"
                       Padding="20"
                       HasShadow="True">
                    <StackLayout Spacing="20">
                        <Label Text="Report Details"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="{StaticResource White}"
                               HorizontalOptions="Center" />
                        
                        <!-- Report Title -->
                        <StackLayout Spacing="8">
                            <Label Text="Report Title"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource White}" />
                            <Frame BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray700}}"
                                   BorderColor="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray500}}"
                                   CornerRadius="8"
                                   Padding="12,0"
                                   HasShadow="False">
                                <Entry x:Name="TitleEntry"
                                       Placeholder="Enter report title"
                                       TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                                       BackgroundColor="Transparent"
                                       PlaceholderColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}"
                                       FontSize="14"
                                       HeightRequest="44"
                                       Style="{StaticResource NoUnderlineEntry}" />
                            </Frame>
                        </StackLayout>
                        
                        <!-- Report Description -->
                        <StackLayout Spacing="8">
                            <Label Text="Description"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource White}" />
                            <Frame BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray700}}"
                                   BorderColor="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray500}}"
                                   CornerRadius="8"
                                   Padding="12,8"
                                   HasShadow="False">
                                <Editor x:Name="DescriptionEditor"
                                        Placeholder="Enter report description"
                                        HeightRequest="100"
                                        TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                                        BackgroundColor="Transparent"
                                        PlaceholderColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}"
                                        FontSize="14"
                                        AutoSize="TextChanges"
                                        Style="{StaticResource NoUnderline}" />
                            </Frame>
                        </StackLayout>
                        
                        <!-- Attachments Section -->
                        <StackLayout Spacing="8">
                            <Label Text="ATTACHMENTS"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource White}" />
                            
                            <!-- Images Grid -->
                            <Grid x:Name="ImagesGrid"
                                  BackgroundColor="Transparent">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                            </Grid>
                            
                            <!-- Add Image Button -->
                            <Button x:Name="AddImageButton"
                                    Text="+ Add Image"
                                    BackgroundColor="{StaticResource Gray600}"
                                    TextColor="{StaticResource White}"
                                    FontSize="14"
                                    FontAttributes="Bold"
                                    HeightRequest="44"
                                    Clicked="OnAddImageClicked" />
                            
                            <!-- Image Path Display -->
                            <Label x:Name="ImagePathLabel"
                                   FontSize="12"
                                   TextColor="{StaticResource Gray400}"
                                   IsVisible="False" />
                        </StackLayout>
                        
                        <!-- Action Buttons -->
                        <Grid ColumnDefinitions="*,*" ColumnSpacing="10" Margin="0,20,0,0">
                            <Button Grid.Column="0"
                                    Text="Cancel"
                                    BackgroundColor="{StaticResource Gray600}"
                                    TextColor="{StaticResource White}"
                                    FontSize="14"
                                    FontAttributes="Bold"
                                    HeightRequest="44"
                                    Clicked="OnCancelClicked" />
                            <Button Grid.Column="1"
                                    Text="Generate Report"
                                    BackgroundColor="{StaticResource PrimaryRed}"
                                    TextColor="{StaticResource White}"
                                    FontSize="14"
                                    FontAttributes="Bold"
                                    HeightRequest="44"
                                    Clicked="OnGenerateReportClicked" />
                        </Grid>
                    </StackLayout>
                </Frame>
                
            </StackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
