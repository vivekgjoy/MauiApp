<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp.Views.Components.GenericNavigationBar"
             x:Name="NavigationBar">

    <!-- Gradient background same as Splash/Login -->
    <Grid HeightRequest="100"
          Padding="0"
          Background="Transparent">

        <BoxView Grid.RowSpan="1">
            <BoxView.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="{StaticResource TopCoral}" Offset="0.0" />
                    <GradientStop Color="{StaticResource BottomCoral}" Offset="1.0" />
                </LinearGradientBrush>
            </BoxView.Background>
        </BoxView>

        <!-- Navigation Content -->
        <Grid Padding="15,50,15,15"
            ColumnDefinitions="Auto,*,Auto"
              VerticalOptions="Center"
              Background="Transparent">

            <!-- Back Button -->
            <ImageButton Grid.Column="0"
                         Source="ic_arrow_back.svg"
                         WidthRequest="30"
                         HeightRequest="30"
                         BackgroundColor="Transparent"
                         Clicked="OnBackClicked"
                         VerticalOptions="Center" />

            <!-- Title -->
            <Label Grid.Column="1"
                   x:Name="TitleLabel"
                   Text="{Binding Source={x:Reference NavigationBar}, Path=Title}"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   FontSize="22"
                   FontAttributes="Bold"
                   TextColor="White" />

            <!-- Right Action Button -->
            <Button Grid.Column="2"
                    x:Name="RightActionButton"
                    Text="{Binding Source={x:Reference NavigationBar}, Path=RightActionText}"
                    IsVisible="{Binding Source={x:Reference NavigationBar}, Path=ShowRightAction}"
                    Command="{Binding Source={x:Reference NavigationBar}, Path=RightActionCommand}"
                    BackgroundColor="Transparent"
                    FontSize="16"
                    TextColor="White"
                    Padding="10,0"
                    VerticalOptions="Center" />

        </Grid>
    </Grid>
</ContentView>
