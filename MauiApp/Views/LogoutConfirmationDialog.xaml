<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp.Views.LogoutConfirmationDialog"
             BackgroundColor="Transparent"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False">

    <Grid>
        <!-- Semi-transparent overlay -->
        <BoxView BackgroundColor="#80000000" />
        
        <!-- Logout Confirmation Dialog -->
        <Frame BackgroundColor="#2C2C2E"
               CornerRadius="16"
               HasShadow="True"
               Margin="40,0,40,0"
               VerticalOptions="Center"
               HorizontalOptions="FillAndExpand"
               Padding="0">
            
            <StackLayout Spacing="0">
                <!-- Header -->
                <StackLayout Padding="24,20,24,16" Spacing="8">
                    <Label Text="Logout"
                           FontSize="20"
                           FontFamily="OpenSansSemibold"
                           TextColor="{StaticResource White}"
                           HorizontalOptions="Start" />
                    
                    <Label Text="Are you sure you want to logout?"
                           FontSize="16"
                           FontFamily="OpenSansRegular"
                           TextColor="#E5E5EA"
                           HorizontalOptions="Start"
                           LineBreakMode="WordWrap" />
                </StackLayout>
                
                <!-- Divider -->
                <BoxView Color="#3A3A3C" HeightRequest="1" />
                
                <!-- Buttons -->
                <Grid ColumnDefinitions="*,*" RowDefinitions="Auto">
                    <!-- No Button -->
                    <Button Grid.Column="0"
                            Text="No"
                            Command="{Binding NoCommand}"
                            BackgroundColor="Transparent"
                            TextColor="#8E8E93"
                            FontSize="17"
                            FontFamily="OpenSansSemibold"
                            HeightRequest="50"
                            CornerRadius="0" />
                    
                    <!-- Divider between buttons -->
                    <BoxView Grid.Column="0" 
                             Grid.ColumnSpan="2"
                             Color="#3A3A3C" 
                             WidthRequest="1" 
                             HorizontalOptions="Center" 
                             VerticalOptions="Fill" />
                    
                    <!-- Yes Button -->
                    <Button Grid.Column="1"
                            Text="Yes"
                            Command="{Binding YesCommand}"
                            BackgroundColor="Transparent"
                            TextColor="#FF3B30"
                            FontSize="17"
                            FontFamily="OpenSansSemibold"
                            HeightRequest="50"
                            CornerRadius="0" />
                </Grid>
            </StackLayout>
        </Frame>
    </Grid>
</ContentPage>
