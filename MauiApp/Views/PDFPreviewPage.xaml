<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp.Views.PDFPreviewPage"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False"
             BackgroundColor="#F5F5F5"
             Padding="0">

    <Grid>

        <!-- 🔸 Background Gradient -->
        <BoxView>
            <BoxView.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="{StaticResource TopCoral}" Offset="0.0" />
                    <GradientStop Color="{StaticResource BottomCoral}" Offset="1.0" />
                </LinearGradientBrush>
            </BoxView.Background>
        </BoxView>

        <!-- 🔹 Custom Header (matched to ReportsHistoryPage) -->
        <Grid x:Name="CustomNavHeader"
              HeightRequest="120"
              VerticalOptions="Start"
              HorizontalOptions="FillAndExpand">

            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="56"/>
                <RowDefinition Height="24"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="1" Padding="10,0,15,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- ⬅️ Back Button (smaller size like ReportsHistoryPage) -->
                <Image Grid.Column="0"
                       Source="ic_arrow_back.svg"
                       WidthRequest="22"
                       HeightRequest="22"
                       VerticalOptions="Center"
                       HorizontalOptions="Start">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnBackButtonClicked" />
                    </Image.GestureRecognizers>
                </Image>

                <!-- 🏷️ Title (same font size as ReportsHistoryPage) -->
                <Label Grid.Column="1"
                       Text="Report Preview"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       HorizontalTextAlignment="Center"/>
            </Grid>
        </Grid>

        <!-- 🧾 Main Content -->
        <ScrollView Margin="0,110,0,0" Padding="20">
            <StackLayout Spacing="20">

                <!-- Images Count and Controls -->
                <Frame BackgroundColor="White" 
                       CornerRadius="8" 
                       Padding="15" 
                       HasShadow="True">
                    <StackLayout Spacing="15">
                        <Label x:Name="TotalImagesLabel"
                               Text="Total Images: 0"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="Black"
                               HorizontalOptions="Center" />

                        <Label Text="Images Per Page:"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="Gray" />

                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                            <Button Grid.Column="0"
                                    Text="−"
                                    FontSize="20"
                                    FontAttributes="Bold"
                                    BackgroundColor="{StaticResource TopCoral}"
                                    TextColor="White"
                                    WidthRequest="50"
                                    HeightRequest="50"
                                    CornerRadius="25"
                                    Clicked="OnDecreaseImagesPerPage" />

                            <Label Grid.Column="1"
                                   x:Name="ImagesPerPageLabel"
                                   Text="2"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   TextColor="Black" />

                            <Button Grid.Column="2"
                                    Text="+"
                                    FontSize="20"
                                    FontAttributes="Bold"
                                    BackgroundColor="{StaticResource TopCoral}"
                                    TextColor="White"
                                    WidthRequest="50"
                                    HeightRequest="50"
                                    CornerRadius="25"
                                    Clicked="OnIncreaseImagesPerPage" />
                        </Grid>
                    </StackLayout>
                </Frame>

                <!-- Preview Pages Container -->
                <StackLayout x:Name="PreviewContainer" Spacing="20" />

                <BoxView HeightRequest="100"
         BackgroundColor="Transparent"
         Color="Transparent" />

            </StackLayout>
        </ScrollView>

        <Grid VerticalOptions="End"
              Padding="0,0,0,25">
            <Button x:Name="GeneratePDFButton"
        Text="Publish PDF"
        FontSize="18"
        FontAttributes="Bold"
        BackgroundColor="{StaticResource TopCoral}"
        TextColor="White"
        HeightRequest="55"
        WidthRequest="200"
        CornerRadius="28"
        HorizontalOptions="Center"
        Clicked="OnGeneratePDFClicked">
                <Button.Shadow>
                    <Shadow Brush="#80000000"
                Offset="0,4"
                Radius="10"
                Opacity="0.4" />
                </Button.Shadow>
            </Button>

        </Grid>

        <!-- Progress Overlay -->
        <Grid x:Name="ProgressOverlay"
              BackgroundColor="#80000000"
              IsVisible="False">
            <Frame BackgroundColor="White"
                   CornerRadius="12"
                   Padding="30"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   HasShadow="True">
                <StackLayout Spacing="20" HorizontalOptions="Center">
                    <ActivityIndicator x:Name="ProgressIndicator"
                                       IsRunning="False"
                                       Color="{StaticResource TopCoral}"
                                       WidthRequest="40"
                                       HeightRequest="40" />
                    <Label x:Name="ProgressLabel"
                           Text="Publishing PDF..."
                           FontSize="16"
                           TextColor="Black"
                           HorizontalOptions="Center" />
                </StackLayout>
            </Frame>
        </Grid>
    </Grid>

</ContentPage>
