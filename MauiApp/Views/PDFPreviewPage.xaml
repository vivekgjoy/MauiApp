<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp.Views.PDFPreviewPage"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False"
             BackgroundColor="#F5F5F5">

    <Grid RowDefinitions="Auto,*,Auto">
        
        <!-- Header -->
        <Frame Grid.Row="0" 
               BackgroundColor="#ED1C24" 
               Padding="20,15" 
               HasShadow="False"
               CornerRadius="0">
            <StackLayout>
                <Label Text="Report Preview"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center" />
                <Label Text="Review your report before publishing"
                       FontSize="16"
                       TextColor="White"
                       HorizontalOptions="Center"
                       Opacity="0.9" />
            </StackLayout>
        </Frame>

        <!-- Main Content -->
        <ScrollView Grid.Row="1" Padding="20">
            <StackLayout Spacing="20">
                
                <!-- Images Count and Controls -->
                <Frame BackgroundColor="White" 
                       CornerRadius="8" 
                       Padding="15" 
                       HasShadow="True">
                    <StackLayout Spacing="15">
                        <Label x:Name="TotalImagesLabel"
                               Text="Total Images: 0"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="Black"
                               HorizontalOptions="Center" />
                        
                        <Label Text="Images Per Page:"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="Gray" />
                        
                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                            <Button Grid.Column="0"
                                    Text="âˆ’"
                                    FontSize="20"
                                    FontAttributes="Bold"
                                    BackgroundColor="#ED1C24"
                                    TextColor="White"
                                    WidthRequest="50"
                                    HeightRequest="50"
                                    CornerRadius="25"
                                    Clicked="OnDecreaseImagesPerPage" />
                            
                            <Label Grid.Column="1"
                                   x:Name="ImagesPerPageLabel"
                                   Text="2"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   TextColor="Black" />
                            
                            <Button Grid.Column="2"
                                    Text="+"
                                    FontSize="20"
                                    FontAttributes="Bold"
                                    BackgroundColor="#ED1C24"
                                    TextColor="White"
                                    WidthRequest="50"
                                    HeightRequest="50"
                                    CornerRadius="25"
                                    Clicked="OnIncreaseImagesPerPage" />
                        </Grid>
                    </StackLayout>
                </Frame>
                
                <!-- Preview Pages Container -->
                <StackLayout x:Name="PreviewContainer" Spacing="20" />
                
                <!-- Spacer for button -->
                <BoxView HeightRequest="100" Color="Transparent" />
                
            </StackLayout>
        </ScrollView>

        <!-- Publish Button -->
        <Frame Grid.Row="2" 
               BackgroundColor="White" 
               Padding="20,15" 
               HasShadow="True"
               CornerRadius="0">
            <Button x:Name="GeneratePDFButton"
                    Text="Publish PDF"
                    FontSize="18"
                    FontAttributes="Bold"
                    BackgroundColor="#ED1C24"
                    TextColor="White"
                    HeightRequest="50"
                    CornerRadius="25"
                    Clicked="OnGeneratePDFClicked" />
        </Frame>

        <!-- Progress Overlay -->
        <Grid x:Name="ProgressOverlay"
              BackgroundColor="#80000000"
              IsVisible="False"
              Grid.RowSpan="3">
            <Frame BackgroundColor="White"
                   CornerRadius="12"
                   Padding="30"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   HasShadow="True">
                <StackLayout Spacing="20" HorizontalOptions="Center">
                    <ActivityIndicator x:Name="ProgressIndicator"
                                       IsRunning="False"
                                       Color="#ED1C24"
                                       WidthRequest="40"
                                       HeightRequest="40" />
                    <Label x:Name="ProgressLabel"
                           Text="Publishing PDF..."
                           FontSize="16"
                           TextColor="Black"
                           HorizontalOptions="Center" />
                </StackLayout>
            </Frame>
        </Grid>
        
    </Grid>

</ContentPage>
