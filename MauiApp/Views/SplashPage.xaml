<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MauiApp.ViewModels"
             x:Class="MauiApp.Views.SplashPage"
             x:DataType="viewmodels:SplashViewModel"
             Title="Splash"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False">

    <Grid>
        <!-- Background Gradient -->
        <BoxView Background="{StaticResource PrimaryRedGradient}" />
        
        <!-- Main Content -->
        <StackLayout VerticalOptions="Center" 
                     HorizontalOptions="Center" 
                     Spacing="40"
                     Padding="40">
            
            <!-- Logo -->
            <Image Source="appicon_converted.svg"
                   Style="{StaticResource IconLarge}"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   WidthRequest="120"
                   HeightRequest="120" />
            
            <!-- App Name -->
            <Label Text="SmartERP"
                   Style="{StaticResource TextH1}"
                   TextColor="{StaticResource White}"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center" />
            
            <!-- Tagline -->
            <Label Text="Enterprise Solutions"
                   Style="{StaticResource TextBodyLarge}"
                   TextColor="{StaticResource White}"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   Opacity="0.9" />
            
            <!-- Loading Indicator -->
            <ActivityIndicator IsRunning="{Binding IsBusy}"
                               Color="{StaticResource White}"
                               WidthRequest="40"
                               HeightRequest="40" />
            
        </StackLayout>
    </Grid>
</ContentPage>
