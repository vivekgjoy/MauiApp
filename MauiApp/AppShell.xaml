<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiApp"
    xmlns:views="clr-namespace:MauiApp.Views"
    Title="SmartERP"
    FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False"
    Shell.TabBarIsVisible="False"
    BackgroundColor="Transparent">

    <Shell.Resources>
        <!-- Base Style for Shell Items -->
        <Style x:Key="BaseShellItemStyle" TargetType="ShellItem">
            <!-- Make background transparent so gradient in pages shows -->
            <Setter Property="Shell.BackgroundColor" Value="Transparent" />
            <Setter Property="Shell.ForegroundColor" Value="{StaticResource White}" />
            <Setter Property="Shell.TitleColor" Value="{StaticResource White}" />
        </Style>

        <!-- Apply globally -->
        <Style TargetType="Shell">
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="Shell.NavBarIsVisible" Value="False" />
        </Style>
    </Shell.Resources>

    <!-- Splash Screen Route -->
    <ShellContent
        Title="Splash"
        ContentTemplate="{DataTemplate views:SplashPage}"
        Route="SplashPage" />

    <!-- Login Page Route -->
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage" />

    <!-- Main Page Route -->
    <ShellContent
        Title=""
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <!-- Add Report Page Route -->
    <ShellContent
        Title="Add Report"
        ContentTemplate="{DataTemplate views:AddReportPage}"
        Route="AddReportPage" />

    <!-- Image Crop Page Route -->
    <ShellContent
        Title="Crop Image"
        ContentTemplate="{DataTemplate views:ImageCropPage}"
        Route="ImageCropPage" />

    <!-- PDF Preview Page Route -->
    <ShellContent
        Title="PDF Preview"
        ContentTemplate="{DataTemplate views:PDFPreviewPage}"
        Route="PDFPreviewPage" />

    <!-- Image Comment Page Route -->
    <ShellContent
        Title="Image Comment"
        ContentTemplate="{DataTemplate views:ImageCommentPage}"
        Route="ImageCommentPage" />

    <!-- Image Edit Page Route -->
    <ShellContent
        Title="Image Edit"
        ContentTemplate="{DataTemplate views:ImageEditPage}"
        Route="ImageEditPage" />

    <!-- Image Source Selection Page Route -->
    <ShellContent
        Title="Image Source"
        ContentTemplate="{DataTemplate views:ImageSourceSelectionPage}"
        Route="ImageSourceSelectionPage" />

    <!-- Reports History Page Route -->
    <ShellContent
        Title="Reports History"
        ContentTemplate="{DataTemplate views:ReportsHistoryPage}"
        Route="ReportsHistoryPage" />

</Shell>
