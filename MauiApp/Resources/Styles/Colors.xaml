<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Primary Brand Colors -->
    <Color x:Key="PrimaryRed">#ED1C24</Color>
    <Color x:Key="PrimaryRedDark">#C41E3A</Color>
    <Color x:Key="PrimaryRedLight">#FF6B6B</Color>
    
    <!-- Coral Orange Colors for Login -->
    <Color x:Key="CoralOrange">#F58B7B</Color>
    <Color x:Key="CoralOrangeDark">#E67A6B</Color>
    
    <!-- Aliases for styles expecting generic keys -->
    <Color x:Key="Primary">#ED1C24</Color>
    <Color x:Key="PrimaryDark">#C41E3A</Color>
    <Color x:Key="PrimaryDarkText">#FFFFFF</Color>
    <Color x:Key="Secondary">#4CAF50</Color>
    <Color x:Key="SecondaryDarkText">#E0E0E0</Color>
    <Color x:Key="Magenta">#FF00FF</Color>
    
    <!-- Gradient Colors -->
    <Color x:Key="GradientStart">#ED1C24</Color>
    <Color x:Key="GradientEnd">#FF6B6B</Color>
    
    <!-- Neutral Colors -->
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>
    <Color x:Key="OffBlack">#121212</Color>
    <Color x:Key="Gray50">#FAFAFA</Color>
    <Color x:Key="Gray100">#F5F5F5</Color>
    <Color x:Key="Gray200">#EEEEEE</Color>
    <Color x:Key="Gray300">#E0E0E0</Color>
    <Color x:Key="Gray400">#BDBDBD</Color>
    <Color x:Key="Gray500">#9E9E9E</Color>
    <Color x:Key="Gray600">#757575</Color>
    <Color x:Key="Gray700">#616161</Color>
    <Color x:Key="Gray800">#424242</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#0B0B0B</Color>

    <!-- Additional Named Colors used by styles -->
    <Color x:Key="MidnightBlue">#191970</Color>
    
    <!-- Status Colors -->
    <Color x:Key="Success">#4CAF50</Color>
    <Color x:Key="Warning">#FF9800</Color>
    <Color x:Key="Error">#F44336</Color>
    <Color x:Key="Info">#2196F3</Color>
    
    <!-- Text Colors -->
    <Color x:Key="TextPrimary">#212121</Color>
    <Color x:Key="TextSecondary">#757575</Color>
    <Color x:Key="TextHint">#9E9E9E</Color>
    <Color x:Key="TextOnPrimary">#FFFFFF</Color>
    
    <!-- Background Colors -->
    <Color x:Key="BackgroundPrimary">#FFFFFF</Color>
    <Color x:Key="BackgroundSecondary">#F5F5F5</Color>
    <Color x:Key="BackgroundCard">#FFFFFF</Color>
    <Color x:Key="BackgroundOverlay">#80000000</Color>

</ResourceDictionary>